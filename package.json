{
    "name": "altv-athena",
    "version": "1.8.2",
    "description": "a roleplay framework for alt:V",
    "author": "stuyk",
    "type": "module",
    "scripts": {
        "build": "node ./utility/copy-helper/copy-helper.mjs",
        "build-watching": "node ./utility/copy-helper/copy-helper.mjs -- WATCHING",
        "update": "altv-pkg d release && git pull origin master && npm install && git submodule update --force --init --recursive --remote",
        "windows": "npm run build && altv-server.exe",
        "linux": "npm run build && ./start.sh",
        "watch-windows": "tsc-watch --onSuccess \"npm run watch-handle-windows\"",
        "watch-linux": "tsc-watch --onSuccess \"npm run watch-handle-linux\"",
        "watch-handle-windows": "npm run build-watching && altv-server.exe",
        "watch-handle-linux": "npm run build-watching && ./start.sh"
    },
    "devDependencies": {
        "@altv/types-client": "^1.5.5",
        "@altv/types-natives": "^1.3.0",
        "@altv/types-server": "^1.7.5",
        "@altv/types-webview": "^1.0.2",
        "@types/axios": "^0.14.0",
        "@types/express": "^4.17.8",
        "@types/glob": "^7.1.3",
        "@types/mongodb": "^3.6.8",
        "@types/node": "^14.6.1",
        "altv-pkg": "latest",
        "fs-extra": "^9.1.0",
        "glob": "^7.1.6",
        "ora": "^5.3.0",
        "promisify-child-process": "^4.1.1",
        "rimraf": "^3.0.2",
        "tsc-watch": "^4.2.9",
        "typescript": "latest"
    },
    "dependencies": {
        "@assemblyscript/loader": "^0.17.13",
        "axios": "^0.21.1",
        "body-parser": "^1.19.0",
        "chalk": "^4.1.0",
        "cors": "^2.8.5",
        "discord.js": "^12.5.1",
        "dotenv": "^8.2.0",
        "elliptic": "^6.5.4",
        "simplymongo": "^2.1.1",
        "sjcl": "^1.0.8"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": true,
        "semi": true,
        "arrowParens": "always",
        "trailingComma": "none"
    }
}
